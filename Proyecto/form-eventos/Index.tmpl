{{ define "Index" }}
  {{ template "Header" }}
    {{ template "Menu"  }}
    <h2> Eventos </h2>
    <table border="1">
      <thead>
      <tr>
        <td>ID</td>
        <td>Nombre</td>
        <td>Fecha</td>
        <td>Lugar</td>
        <td>Ver</td>
        <td>Editar</td>
        <td>Eliminar</td>
      </tr>
       </thead>
       <tbody>
    {{ range . }}
      <tr>
        <td>{{ .Id }}</td>
        <td> {{ .Nombre }} </td>
        <td>{{ .Lugar }} </td>
        <td>{{ .Fecha }} </td>
        <td><a href="/show?id={{ .Id }}">Ver</a></td>
        <td><a href="/edit?id={{ .Id }}">Editar</a></td>
        <td><a href="/delete?id={{ .Id }}">Eliminar</a><td>
      </tr>
    {{ end }}
       </tbody>
    </table>
  {{ template "Footer" }}
{{ end }}
